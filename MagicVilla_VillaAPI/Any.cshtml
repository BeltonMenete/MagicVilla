@{
    Layout = null;
    string welcomeMessage = "Welcome to Razor Pages!";
    int year = DateTime.Now.Year;
    List<string> items = new List<string> { "Item 1", "Item 2", "Item 3" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSHTML Example</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        header {
            background-color: #4CAF50;
            color: white;
            padding: 10px 0;
            text-align: center;
            margin-bottom: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #4CAF50;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        ul li {
            background: #efefef;
            margin: 5px 0;
            padding: 10px;
            border-radius: 3px;
        }
    </style>
</head>
<body>

<header>
    <h1>@welcomeMessage</h1>
</header>

<div class="container">
    <h2>List of Items</h2>
    <ul>
        @foreach (var item in items)
        {
            <li>@item</li>
        }
    </ul>

    <p>Current Year: @year</p>
</div>

</body>
</html>
